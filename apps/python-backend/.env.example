# Weave Python FastAPI Backend Environment Variables

# Environment
ENVIRONMENT=development

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/weave

# OpenAI API
OPENAI_API_KEY=sk-...

# AWS S3 / Backblaze B2
AWS_ACCESS_KEY_ID=your_key_id
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=weave-memories
S3_REGION=us-west-000
S3_ENDPOINT_URL=https://s3.us-west-000.backblazeb2.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,https://*.vercel.app

# Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Moderation
ENABLE_MODERATION=true
MODERATION_THRESHOLD=0.5
